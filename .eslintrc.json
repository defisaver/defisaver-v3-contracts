{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "mocha": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:import/recommended",
        "plugin:prettier/recommended" // turns off conflicting rules + runs Prettier
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-console": "off", // allow console.log in scripts/tests
        "func-names": "off", // allow anonymous functions
        "prefer-destructuring": "off", // allow direct property access
        "no-plusplus": "off", // allow i++
        "no-loop-func": "off", // allow functions inside a loop
        "no-unused-vars": "error"
    },
    "ignorePatterns": ["gen/sdk/**/*.ts", "deprecated/**/*"]
}
