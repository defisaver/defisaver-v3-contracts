{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "mocha": true
    },
    "extends": ["airbnb-base"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", 4],
        "no-console": "off",
        "func-names": "off",
        "prefer-destructuring": "off",
        "no-plusplus": "off",
        "no-loop-func": "off",
        "linebreak-style": "off"
    }
}
